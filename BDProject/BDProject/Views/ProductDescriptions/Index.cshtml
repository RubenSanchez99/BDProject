@model IEnumerable<BDProject.Models.ProductDescription>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.language_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.translated_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.translated_description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.language_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.translated_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.translated_description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.product_id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.product_id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.product_id })
        </td>
    </tr>
}

</table>
