@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Tablas del proyecto</h1>
    <p class="lead">2do Avance del proyecto.</p>


    <div id="carousel-example-generic" class="carousel slide carousel-fade" data-ride="carousel" data-interval="3000" data-pause="null">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            <li data-target="#carousel-example-generic" data-slide-to="3"></li>
            <li data-target="#carousel-example-generic" data-slide-to="4"></li>
            <li data-target="#carousel-example-generic" data-slide-to="5"></li>
            <li data-target="#carousel-example-generic" data-slide-to="6"></li>
            <li data-target="#carousel-example-generic" data-slide-to="7"></li>
            <li data-target="#carousel-example-generic" data-slide-to="8"></li>
            <li data-target="#carousel-example-generic" data-slide-to="9"></li>
            <li data-target="#carousel-example-generic" data-slide-to="10"></li>
            <li data-target="#carousel-example-generic" data-slide-to="11"></li>
            <li data-target="#carousel-example-generic" data-slide-to="12"></li>
            <li data-target="#carousel-example-generic" data-slide-to="13"></li>
        </ol>

        <!-- Wrapper for slides -->
        <!-- slide 1 -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Images/Countries.jpeg"/>
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Países", "Index", "Countries", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Lista de paises</p>
                </div>
            </div>
            <!-- slide 2 -->
            <div class="item">
                <img src="~/Images/Customers.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Clientes", "Index", "Customers", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Lista de clientes</p>
                </div>
            </div>
            <!-- slide 3 -->
            <div class="item">
                <img src="~/Images/Departments.png" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Departamentos", "Index", "Departments", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Lista de departamentos</p>
                </div>
            </div>
            <!-- slide 4 -->
            <div class="item">
                <img src="~/Images/Employees.jpeg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Empleados", "Index", "Employees", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Lista de empleados</p>
                </div>
            </div>
            <!-- slide 5 -->
            <div class="item">
                <img src="~/Images/Inventory.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Inventarios", "Index", "Inventories", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Inventarios de la organizacion</p>
                </div>
            </div>
            <!-- slide 6 -->
            <div class="item">
                <img src="~/Images/Job.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Puestos", "Index", "Jobs", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Puestos de la organización</p>
                </div>
            </div>

            <!-- slide 7 -->
            <div class="item">
                <img src="~/Images/JobHistory.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Historial de puestos", "Index", "JobHistory", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Historial de puestos de la organización</p>
                </div>
            </div>

            <!-- slide 8 -->
            <div class="item">
                <img src="~/Images/Location.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">
                        @Html.ActionLink("Ubicaciones", "Index", "Locations", null,
            new { @class = "routeStyle" })
                    </h1>
                    <p class="super-paragraph">Ubicaciones</p>
                </div>
            </div>

            <!-- slide 9 Orders-->
            <div class="item">
                <img src="~/Images/Order.png" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Ordenes de compra", "Index", "Orders", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Ordenes de compras</p>
                </div>
            </div>

            <!-- slide 10  OrdersItem-->
            <div class="item">
                <img src="~/Images/OrdersItem.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Artículos solicitados", "Index", "OrderItems", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Artículo solicitado en una orden de compra</p>
                </div>
            </div>

            <!-- slide 11 ProductDescription-->
            <div class="item">
                <img src="~/Images/ProductDescription.png" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">
                        @Html.ActionLink("Descripcion de artículo", "Index", "ProductDescriptions", null,
           new { @class = "routeStyle" })
                    </h1>
                    <p class="super-paragraph">Desripciones de artículos</p>
                </div>
            </div>

            <!-- slide 12 -->
            <div class="item">
                <img src="~/Images/ProductInformation.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Información de artículo", "Index", "ProductInformations", null,
                                                 new { @class = "routeStyle" })
                    </h1>
                    <p class="super-paragraph">Información sobre artículos.</p>
                </div>
            </div>

            <!-- slide 13 Regions -->
            <div class="item">
                <img src="~/Images/regions.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">
                        @Html.ActionLink("Regiones", "Index", "Regions", null,
            new { @class = "routeStyle" })
                                    </h1>
                    <p class="super-paragraph">Subdivision de la organización</p>
                </div>
            </div>

            <!-- slide 14 -->
            <div class="item">
                <img src="~/Images/warehouse.jpg" />
                <div class="overlay"></div>
                <div class="carousel-caption">
                    <h1 class="super-heading">@Html.ActionLink("Almacenes", "Index", "Warehouses", null,
                                                new { @class = "routeStyle" })</h1>
                    <p class="super-paragraph">Almacenes de la organización</p>
                </div>
            </div>

        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

